{
  "openapi": "3.0.0",
  "info": {
    "title": "Quotes API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "description": "local",
      "url": "http://localhost"
    }
  ],
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "Quotes"
    }
  ],
  "paths": {
    "/api/token": {
      "post": {
        "operationId": "createApiToken",
        "summary": "Generate an API Token",
        "description": "Generate an API Token for protected routes",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "API Token created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string"
                        },
                        "expires": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/quotes": {
      "get": {
        "operationId": "getQuotes",
        "summary": "Get quotes",
        "description": "Get random quotes. By default, quotes are cached for 1 hour.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["Quotes"],
        "parameters": [
          {
            "name": "refresh",
            "in": "query",
            "description": "Refresh cache",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Quotes retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}